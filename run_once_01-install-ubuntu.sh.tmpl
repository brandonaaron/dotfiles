{{- if eq .chezmoi.os "linux" -}}
#!/usr/bin/env bash

##
# Original from https://github.com/mkasberg/dotfiles/blob/00e4585c225f82b3f72ef023c1272e52193c3e9a/run_once_01-install-ubuntu-applications.sh.tmpl
##

# Run this as sudo!
if [ $EUID != 0 ]; then
  sudo "$0" "$@"
  exit $?
fi

apt-get update

apt-get install \
  build-essential \
  curl \
  rbenv \
  zsh \
  -y -q

# Default to zsh
sudo chsh "$(id -un)" --shell "/usr/bin/zsh"

# Oh My Zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended --keep-zshrc

# fnm
curl -fsSL https://fnm.vercel.app/install | bash

# starship
curl -sS https://starship.rs/install.sh | sh -s -- --yes

# neovim
sudo apt-get install ninja-build gettext cmake unzip curl -y -q
git clone --depth 1 --branch v0.9.4 https://github.com/neovim/neovim.git
cd neovim
git checkout v0.9.4
make CMAKE_BUILD_TYPE=RelWithDebInfo
sudo make install
cd ..

{{ end -}}
