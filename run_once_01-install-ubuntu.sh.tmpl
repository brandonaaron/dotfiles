{{- if eq .chezmoi.os "linux" -}}
#!/usr/bin/env bash

##
# Original from https://github.com/mkasberg/dotfiles/blob/00e4585c225f82b3f72ef023c1272e52193c3e9a/run_once_01-install-ubuntu-applications.sh.tmpl
##

# Run this as sudo!
if [ $EUID != 0 ]; then
  sudo "$0" "$@"
  exit $?
fi

apt-get update

apt-get install \
  build-essential \
  curl \
  rbenv \
  zsh \
  -y -q

# Default to zsh
sudo chsh "$(id -un)" --shell "/usr/bin/zsh"

# Oh My Zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended --keep-zshrc

# fnm
curl -fsSL https://fnm.vercel.app/install | bash

# starship
curl -sS https://starship.rs/install.sh | sh -s -- --yes

# Nerd Fonts
mkdir -p ~/.local/share/fonts
cd ~/.local/share/fonts && curl -fLO 'https://github.com/ryanoasis/nerd-fonts/blob/v3.1.1/patched-fonts/UbuntuMono/Regular/UbuntuMonoNerdFontMono-Regular.ttf?raw=true'
cd ~/.local/share/fonts && curl -fLO 'https://github.com/ryanoasis/nerd-fonts/blob/v3.1.1/patched-fonts/UbuntuMono/Bold/UbuntuMonoNerdFontMono-Bold.ttf?raw=true'
cd ~/.local/share/fonts && curl -fLO 'https://github.com/ryanoasis/nerd-fonts/blob/v3.1.1/patched-fonts/UbuntuMono/Regular-Italic/UbuntuMonoNerdFontMono-Italic.ttf?raw=true'
cd ~/.local/share/fonts && curl -fLO 'https://github.com/ryanoasis/nerd-fonts/blob/v3.1.1/patched-fonts/UbuntuMono/Bold-Italic/UbuntuMonoNerdFontMono-BoldItalic.ttf?raw=true'

{{ end -}}
