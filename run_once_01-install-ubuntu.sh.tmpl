{{- if eq .chezmoi.os "linux" -}}
#!/usr/bin/env bash

##
# Original from https://github.com/mkasberg/dotfiles/blob/00e4585c225f82b3f72ef023c1272e52193c3e9a/run_once_01-install-ubuntu-applications.sh.tmpl
##

# Run this as sudo!
if [ $EUID != 0 ]; then
  sudo "$0" "$@"
  exit $?
fi

apt-get update

apt-get install \
  build-essential \
  curl \
  git \
  procps \
  file \
  zsh \
  -y -q

# Default to zsh
chsh "$(id -un)" --shell "/usr/bin/zsh"

# Install Homebrew on Linux (as the user, not root)
sudo -u "$(id -run)" NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# Install packages from Brewfile using the user account
sudo -u "$(id -run)" /home/linuxbrew/.linuxbrew/bin/brew bundle install --file "{{ .chezmoi.sourceDir }}/Brewfile"

{{ end -}}
